@CHARSET "UTF-8";

div.pagination {
	margin: auto;
	padding: 0;
}

#fm {
	margin: 0;
	padding: 10px 30px;
}

.ftitle {
	font-size: 14px;
	font-weight: bold;
	color: #666;
	padding: 5px 0;
	margin-bottom: 10px;
	border-bottom: 1px solid #ccc;
}

.fitem {
	margin-bottom: 5px;
}

.fitem label {
	display: inline-block;
	width: 80px;
}

.easyui-dialog input {
	height: 1.3em;
}

.header,.footer {
	width: 100%;
}

.footer {
	text-align: center;
}

.login_info {
	text-align: right;
}

.layout-footer {
	height: 40px;
	background: #A9FACD;
	padding-top: 2px;
}

.layout-nav {
	width: 150px;
	padding: 10px;
}

.layout-header {
	height: 60px;
	background: #B3DFDA;
	padding: 10px
}

.icon-gears {
	background: url('../images/base/gears.png') no-repeat;
}

.icon-base {
	background: url('../images/base/basic.png') no-repeat;
}

.searchbox-container {
	position: absolute;
	top: 4px;
	right: 2px;
	display: none;
	border: 0;
}

.searchbox-container #ss {
	width: 300px;
}